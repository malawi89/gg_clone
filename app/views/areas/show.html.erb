<h1><%= @area.name %></h1>

<%= link_to "Add a runner", new_area_runner_path(@area), class: "btn btn-success btn-lg" %>

<% if current_user.id == @area.user_id %>
  <%= link_to "Email Users", "#" , class: "btn btn-success btn-lg"%>
<% else %>
<% end %>
<h2><%= @area.name %> runners: </h2>
<% @area.runners.each_with_index do |runner, index|%>
   <p><strong><%= (index + 1) %>. <%= runner.first_name %> <%= runner.last_name %> </strong></p>
   <p><strong>Status:</strong> <%= runner.status %></p>
   <p><strong>Interested in: </strong></p>
   <p> <%= "Coach Runs" if runner.coach_run %></p>
   <p> <%= "Missions" if runner.mission %></p>
   <p> <%= "Group Runs" if runner.group_run %></p>
<% end %>
