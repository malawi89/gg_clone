
<%= simple_form_for [@area, @runner] do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :first_name%>
    <%= f.input :last_name%>
    <%= f.input :email%>
    <%= f.input :status, collection: ['regular', 'lapsed', 'never_run']%>
    <%= f.input :group_run, collection: [true, false]%>
    <%= f.input :mission, collection: [true, false]%>
    <%= f.input :coach_run, collection: [true, false]%>

  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class:"btn btn-success" %>
  </div>
<% end %>
