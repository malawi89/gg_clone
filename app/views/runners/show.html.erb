<div class="container">
  <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <% if @runner.status == "regular" %>
          <div class="card regular">
        <% elsif @runner.status == "lapsed" %>
          <div class="card lapsed">
        <% else %>
          <div class="card never-run">
        <% end %>
          <div class="details">
            <%= @runner.first_name %> <%= @runner.last_name %> <br>
            <%= @runner.email %>
          </div>
          <div class="interests">
            <% if @runner.coach_run  %>
              <i class="fas fa-hands-helping fa-3x"></i>
            <% end %>
            <% if @runner.group_run %>
              <i class="fas fa-users fa-3x"></i>
            <% end %>
            <% if @runner.mission %>
              <i class="fas fa-people-carry fa-3x"></i>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
